# Flask
export DEBUG='True'
export SECRET_KEY='{{ random_ascii_string(20) }}'

# Emailing
export MAIL_DEFAULT_SENDER="{{cookiecutter.email}}"
# export SMTP_SERVER="localhost"

# Database
#
# For example:
#  sqlite:////absolute/path/test.db
#  sqlite:///relative/path/test.db
#  mysql://username:password@server/db

export SQLALCHEMY_ECHO='False'
export SQLALCHEMY_DATABASE_URI="mariadb+pymysql://{{cookiecutter.database_username}}:{{cookiecutter.database_password}}@{{cookiecutter.database_host}}/{{cookiecutter.database_name}}"

# User details
export ADMIN_EMAIL_ADDRESS="{{cookiecutter.email}}"
export ADMIN_USERNAME="{{cookiecutter.email}}"
export ADMIN_PASSWORD="{{cookiecutter.application_password}}"

# Directories
